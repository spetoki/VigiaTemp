rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Regras abertas para desenvolvimento.
    // Qualquer pessoa pode ler, escrever e apagar dados.
    // Proteja seus dados antes de ir para produção.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
