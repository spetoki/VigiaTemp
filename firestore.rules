rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em qualquer documento dentro da coleção de um usuário específico.
    // Isso cobre sensores, alertas, lotes, etc.
    match /users/{userId}/{document=**} {
      allow read, write: if true;
    }
  }
}
