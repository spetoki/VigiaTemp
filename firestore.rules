
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGRA DE DESENVOLVIMENTO: Permite acesso total e irrestrito a todo o banco de dados.
    // Isso é útil para prototipagem rápida, mas é inseguro para produção.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
